@page "/counter"

<PageTitle>Counter</PageTitle>

<h1 style="color:white">Counter</h1>

<p style="color:white" role="status">Current count: @currentCount</p>

<button style="background-color: darkgray;color:white" class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
